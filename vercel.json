{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10.11"
      }
    },
    {
      "src": "docs/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "docs/docs/.vitepress/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/docs/(.*)", "dest": "/docs/docs/.vitepress/dist/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}